{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "jsx": "react-jsx",
    "module": "ES2022",
    "baseUrl": "./",
    "paths": {
      "react": ["https://esm.sh/react@18.2.0"],
      "react-dom": ["https://esm.sh/react-dom@18.2.0"],
      "json-utils": ["./node_modules/json-utils/src/json-utils.ts"],
    },
    "sourceMap": true,
    "outDir": "./public/dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
  },
  "exclude": [
    "**/*_test.tsx",
    "public",
  ],
}
